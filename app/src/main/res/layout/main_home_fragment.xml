<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/nav_bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="-2dp"
                    android:layout_marginVertical="4dp"
                    android:src="@drawable/img_home_logo" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/home_plus_btn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginRight="19dp"
                        android:layout_toLeftOf="@id/favorite"
                        android:background="#000"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_insta_story" />

                    <ImageButton
                        android:id="@+id/favorite"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="10dp"
                        android:layout_toLeftOf="@id/talk"
                        android:background="#000"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_insta_heart" />

                    <ImageButton
                        android:id="@+id/talk"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginVertical="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:background="#000"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_insta_msg" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/home_frame1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/home_frame2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_post"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:overScrollMode="never">

                    </androidx.recyclerview.widget.RecyclerView>

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="300dp">

        </ListView>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:src="@drawable/icon_insta_home_ck" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:src="@drawable/icon_insta_search" />

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:src="@drawable/icon_insta_play" />

        <ImageButton
            android:id="@+id/btn_shop"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:src="@drawable/icon_insta_shop" />

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:src="@drawable/icon_insta_profile" />
    </LinearLayout>


</LinearLayout>
