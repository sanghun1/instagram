<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:src="@drawable/img_logo" />

        <EditText
            android:id="@+id/login_id"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:background="@drawable/border_login"
            android:hint="전화번호, 이메일 주소 또는 사용자 이름"
            android:padding="10dp"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/login_pw"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:background="@drawable/border_login"
            android:hint="비밀번호"
            android:padding="10dp"
            android:textSize="14dp" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:background="@drawable/border_login_btn"
            android:text="로그인" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="로그인 상세 정보를 잊으셨나요?"
            android:textColor="#AAA7A7"
            android:textSize="11dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_sign_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/border_sign_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="계정이 없으신가요?"
            android:textColor="#AAA7A7"
            android:textSize="11dp"/>

        <Button
            android:id="@+id/login_sign_button"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/black"
            android:padding="0dp"
            android:text="가입하기."
            android:textColor="#B5D6ED"
            android:textSize="11dp"/>

    </LinearLayout>

</LinearLayout>