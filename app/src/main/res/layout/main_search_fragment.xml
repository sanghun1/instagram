<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius">

                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/icon_search" />

                <EditText
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/search_icon" />

            </RelativeLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@drawable/icon_place" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:src="@drawable/icon_insta_home" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:src="@drawable/icon_insta_search_ck" />

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:src="@drawable/icon_insta_play" />

        <ImageButton
            android:id="@+id/btn_shop"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:src="@drawable/icon_insta_shop" />

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:src="@drawable/icon_insta_profile" />
    </LinearLayout>

</LinearLayout>