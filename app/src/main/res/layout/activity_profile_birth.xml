<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".ProfileBirthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/profile_birth_exit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/icon_insta_x" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="생일"
            android:textSize="21dp"
            android:textColor="#fbfafb"
            android:textStyle="bold"
            android:layout_marginHorizontal="25dp"/>

        <Button
            android:id="@+id/profile_birth_commit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/icon_insta_check_blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1C1C1C"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_birth_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0000년 0월 0일"
            android:textColor="#fbfafb"
            android:textSize="18dp"
            android:background="@color/black"
            android:layout_marginVertical="30dp"
            android:padding="15dp"/>
    </LinearLayout>

    <DatePicker
        android:id="@+id/profile_birth_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:src="@drawable/icon_insta_home" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:src="@drawable/icon_insta_search" />

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:src="@drawable/icon_insta_play" />

        <ImageButton
            android:id="@+id/btn_shop"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:src="@drawable/icon_insta_shop" />

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:background="@color/black"
            android:src="@drawable/icon_insta_profile_ck" />
    </LinearLayout>

</LinearLayout>